<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondFragment">

    <!-- Primera fila de imágenes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:src="@drawable/fondof4"
            android:scaleType="centerCrop"
            android:contentDescription="Descripción de la imagen 1"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:src="@drawable/fondof3"
            android:scaleType="centerCrop"
            android:contentDescription="Descripción de la imagen 2"
            android:clickable="true" />

    </LinearLayout>

    <!-- Segunda fila de imágenes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:src="@drawable/fondof2"
            android:scaleType="centerCrop"
            android:contentDescription="Descripción de la imagen 3"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:src="@drawable/fondof5"
            android:scaleType="centerCrop"
            android:contentDescription="Descripción de la imagen 4"
            android:clickable="true" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:src="@drawable/fondof1"
            android:scaleType="centerCrop"
            android:contentDescription="Descripción de la imagen 5"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>
